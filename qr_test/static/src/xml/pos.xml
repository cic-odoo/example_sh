<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-extend="OrderReceipt">
        <t t-jquery=".pos-receipt-order-data" t-operation="replace">
            <div class="pos-receipt-order-data">
                <div class="row" style="border-top: 1pt dashed black;"/>
                <br/>
                <div style="text-align:left;">
                    <div>Código de control: <t t-esc="receipt.control_code"/></div>
                    <div>Fecha límite de emisión: <t t-esc="receipt.deadline_date"/></div>
                    <div>Son: <t t-esc="receipt.amount_total_literal"/></div>
                </div>
                <br/>
                <div style="align-content:center;text-aling:center;">
                    <div t-attf-id="#{receipt.qr_string}"></div>
                    <script type="text/javascript">
                        var invoice_qr = '<t t-esc="receipt.qr_string"/>';
                        var qrcode = new QRCode(invoice_qr , {
                            text: "http://jindo.dev.naver.com/collie",
                            width: 100,
                            height: 100,
                            colorDark : "#000000",
                            colorLight : "#ffffff",
                            correctLevel : QRCode.CorrectLevel.H
                        });
                        qrcode.makeCode(invoice_qr);
                    </script>
                </div>
                <br/>
                <div style="font-size:90%; text-align:justify;">"ESTA FACTURA CONTRIBUYE AL DESARROLO DEL PAIS, EL USO ILICITO DE ESTA SERA SANCIONADO DE ACUERDO A LEY"</div>
            <div><t t-esc="receipt.legend"/></div>
            </div>
        </t>
    </t>
</templates>